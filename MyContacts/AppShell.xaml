<?xml version="1.0" encoding="UTF-8" ?>

<Shell
    Shell.FlyoutBehavior="Disabled"
    Shell.ForegroundColor="Black"
    Title="MyContacts"
    x:Class="MyContacts.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:local="clr-namespace:MyContacts"
    xmlns:pages="clr-namespace:MyContacts.Pages"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ShellContent
        ContentTemplate="{DataTemplate pages:HomePage}"
        Route="home"
        Title="Home" />
    <ShellContent
        ContentTemplate="{DataTemplate pages:ListContactsPage}"
        Route="listcontacts"
        Title="Contatos" />
    <ShellContent
        ContentTemplate="{DataTemplate pages:NewContactPage}"
        Route="newcontact"
        Title="Novo contato" />

</Shell>